        "eslint-plugin-jsdoc": "30.7.8",
        "mocha": "8.2.1",
        "nyc": "^15.1.0",
        "prettier": "2.1.2",
        "ts-node": "9.1.0",
        "typedoc": "0.19.2",
        "typescript": "4.0.5"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@sivrad/matrix": "^1.0.39",
